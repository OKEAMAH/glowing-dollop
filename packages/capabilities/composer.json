{
	"name": "automattic/jetpack-capabilities",
	"description": "Rich permissions library",
	"type": "library",
	"license": "GPL-2.0-or-later",
	"require": {},
	"require-dev": {
		"phpunit/phpunit": "^5.7 || ^6.5 || ^7.5",
		"php-mock/php-mock": "^2.1",
		"mockery/mockery": "^1.2",
		"wp-phpunit/wp-phpunit": "^5.2",
		"roots/wordpress": "^5.2"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"repositories": [
		{
			"type": "path",
			"url": "../*"
		}
	],
	"scripts": {
		"phpunit": [
			"@composer install",
			"./vendor/phpunit/phpunit/phpunit --colors=always"
		]
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
